{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Inno Setup: Compile Script",
      "type": "process",
      "command": "ISCC.exe",
      "args": [
        "${file}"
      ],
      "presentation": {
        "reveal": "always",
        "echo": false
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Format Qml",
      "type": "shell",
      "command": "/usr/local/Qt-6.9.2/bin/qmlformat",
      "args": [
        "--inplace",
        "--indent-width",
        "4",
        "${file}"
      ],
    }
  ]
}
